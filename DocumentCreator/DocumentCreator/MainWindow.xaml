<Window x:Class="DocumentCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="ListOfDisciplines" HorizontalAlignment="Left" Margin="23,90,0,0" VerticalAlignment="Top" Width="204" SelectionChanged="ListOfDisciplines_SelectionChanged" MaxDropDownHeight="1000">
            <Button ClickMode="Hover" Content="Темплан"/>
            <MenuItem Header="qwe"/>
        </ComboBox>
        <Label x:Name="ChooseDiscipline" Content="Выберите тип загружаемого файла" HorizontalAlignment="Left" Margin="23,59,0,0" VerticalAlignment="Top"/>
        <Button x:Name="DownloadButton" Content="Обзор" HorizontalAlignment="Left" Margin="265,90,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.501,0.533" Height="22" Click="DownloadButton_Click"/>
        <Label x:Name="WelcomeLable" Content="Welcome to the CUMK, body" HorizontalAlignment="Left" Height="35" Margin="148,19,0,0" VerticalAlignment="Top" Width="254" FontSize="18"/>
    </Grid>
</Window>
