<Window x:Class="DocumentCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="525">
    <Grid>
        <Button x:Name="DownloadButton" Content="Обзор" HorizontalAlignment="Left" Margin="315,111,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.501,0.533" Height="28" Click="DownloadButton_Click"/>
        <Label x:Name="WelcomeLable" Content="Создатель учебно-методических разработок" HorizontalAlignment="Left" Height="35" Margin="83,18,0,0" VerticalAlignment="Top" Width="387" FontSize="18"/>
        <Label x:Name="PathToFile" Content="" HorizontalAlignment="Left" Margin="25,111,0,0" VerticalAlignment="Top" Width="270" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="ChooseFile" Content="Выберите темплан" HorizontalAlignment="Left" Margin="25,80,0,0" VerticalAlignment="Top"/>
        <Button x:Name="GenerateButton" Content="Создать документы" HorizontalAlignment="Left" Margin="179,185,0,0" VerticalAlignment="Top" Width="165" Click="GenerateButton_Click" Height="39" IsEnabled="False"/>
    </Grid>
</Window>
