<Window x:Class="DocumentCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="ListOfDisciplines" HorizontalAlignment="Left" Margin="23,90,0,0" VerticalAlignment="Top" Width="204" SelectionChanged="ListOfDisciplines_SelectionChanged" MaxDropDownHeight="1000">
            <Button ClickMode="Hover" Content="Темплан" BorderBrush="{x:Null}" Background="{x:Null}"/>
            <Button ClickMode="Hover" Content="Учебный программа" BorderBrush="{x:Null}" Background="{x:Null}"/>
        </ComboBox>
        <Label x:Name="ChooseDiscipline" Content="Выберите тип загружаемого файла" HorizontalAlignment="Left" Margin="23,59,0,0" VerticalAlignment="Top"/>
        <Button x:Name="DownloadButton" Content="Обзор" HorizontalAlignment="Left" Margin="313,149,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.501,0.533" Height="28" Click="DownloadButton_Click" IsEnabled="False"/>
        <Label x:Name="WelcomeLable" Content="Welcome to the CUMK, body" HorizontalAlignment="Left" Height="35" Margin="148,19,0,0" VerticalAlignment="Top" Width="254" FontSize="18"/>
        <Label x:Name="PathToFile" Content="" HorizontalAlignment="Left" Margin="23,149,0,0" VerticalAlignment="Top" Width="270" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="ChooseFile" Content="Выберите файл" HorizontalAlignment="Left" Margin="23,118,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ChooseSavePath" Content="Выберите место сохранения нового файла" HorizontalAlignment="Left" Margin="23,195,0,0" VerticalAlignment="Top" BorderThickness="1"/>
        <Label x:Name="SavePath" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,226,0,0" Width="270" BorderThickness="1" BorderBrush="Black"/>
        <Button x:Name="PathToSaveButton" Content="Обзор" HorizontalAlignment="Left" Margin="313,226,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="PathToSaveButton_Click"/>
        <Button x:Name="GenerateButton" Content="Сгенерировать документ" HorizontalAlignment="Left" Margin="192,279,0,0" VerticalAlignment="Top" Width="146"/>
    </Grid>
</Window>
